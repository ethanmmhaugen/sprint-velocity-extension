// tsconfig.json
{
	"compilerOptions": {
		"target": "es6",
		"module": "esnext",
		"lib": ["dom", "es6"],
		"jsx": "react",
		"strict": true,
		"outDir": "dist",
		"sourceMap": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"types": ["chrome"] // include Chrome extension API typings
	},
	"include": ["src"]
}
